<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:rowCount="6"
        android:columnCount="2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/Circular"
                />
            <TextView
                android:text="@string/circular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--ok now Circular with Border Image-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="#ED0D5A"
                app:strokeWidth="4dp"
                android:padding="5dp"
                />
            <TextView
                android:text="Circular Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--ok now corner Radius Images-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                />
            <TextView
                android:text="Corner Rounded"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--with Border-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:strokeColor="#099320"
                app:strokeWidth="4dp"
                android:padding="5dp"
                />
            <TextView
                android:text="Rounded Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--ok now is Corner cut-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/CornerCut"
                android:padding="5dp"
                />
            <TextView
                android:text="CornerCut"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--with border-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/CornerCut"
                android:padding="5dp"
                app:strokeWidth="3dp"
                app:strokeColor="#FBE200"
                />
            <TextView
                android:text="CornerCut Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--ok now DiamondCut-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/DiamondCut"
                android:padding="5dp"
                />
            <TextView
                android:text="DiamondCut"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--with border-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/DiamondCut"
                android:padding="5dp"
                app:strokeWidth="5dp"
                app:strokeColor="#0F2CCF"
                />
            <TextView
                android:text="DiamondCut Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--ok now Specified Corner Radius-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/SpecificCornerCut"
                android:padding="5dp"
                />
            <TextView
                android:text="Specified CornerCut"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/SpecificCornerCut"
                android:padding="5dp"
                app:strokeColor="#0274C1"
                app:strokeWidth="4dp"
                />
            <TextView
                android:text="SpecifiedCut Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded"
                android:padding="5dp"
                />
            <TextView
                android:text="Specified CornerRounded"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/mode"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded"
                android:padding="5dp"
                app:strokeWidth="4dp"
                app:strokeColor="#07810C"
                />
            <TextView
                android:text="SpecifiedRounded Border"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="11sp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </GridLayout>

</ScrollView>